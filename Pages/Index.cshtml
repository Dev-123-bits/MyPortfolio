<style>
    /* About Section Styles */
    .about-content p {
        margin-bottom: 0;
    }

    /* Skills Section */
    .skill-category {
        margin-bottom: 1.5rem;
    }

        .skill-category h5 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

    .progress {
        height: 8px;
        border-radius: 4px;
        background-color: #f0f4f8;
    }

    /* Timeline Styles */
    .timeline {
        position: relative;
        padding-left: 1.5rem;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 2rem;
        padding-left: 2rem;
        border-left: 2px solid var(--primary-color);
        margin-left: 1.5rem;
    }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -9px;
            top: 0;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: var(--primary-color);
            border: 3px solid #fff;
        }

    .timeline-list {
        padding-left: 1rem;
        list-style-type: none;
    }

        .timeline-list li {
            margin-bottom: 0.5rem;
            position: relative;
        }
</style>
